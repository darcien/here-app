{
  "name": "mysmartfren",
  "version": "0.1.0",
  "private": true,
  "main": "./node_modules/react-native-scripts/build/bin/crna-entry.js",
  "scripts": {
    "start": "react-native-scripts start",
    "eject": "react-native-scripts eject",
    "android": "react-native-scripts android",
    "ios": "react-native-scripts ios",
    "test-src": "jest",
    "lint": "tslint src/**/*.ts",
    "test": "yarn lint && yarn test-src",
    "testWithCoverage": "jest --coverage",
    "testWatch": "jest --coverage --watch",
    "clean": "rimraf build",
    "tsc": "tsc",
    "build": "yarn clean && yarn tsc",
    "watch": "yarn build -w",
    "watchAndRunAndroid": "concurrently \"yarn watch\" \"yarn android\"",
    "buildRunAndroid": "yarn build && yarn watchAndRunAndroid ",
    "watchAndRunIOS": "concurrently \"yarn watch\" \"yarn ios\"",
    "buildRunIOS": "yarn build && yarn watchAndRunIOS ",
    "watchAndStart": "concurrently \"yarn watch\" \"yarn start\"",
    "buildAndStart": "yarn build && yarn watchAndStart "
  },
  "dependencies": {
    "expo": "^31.0.4",
    "react": "16.5.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-31.0.0.tar.gz",
    "react-navigation": "^2.18.2"
  },
  "devDependencies": {
    "@types/expo": "^31.0.1",
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.7",
    "@types/react-native": "^0.56.17",
    "@types/react-native-material-ui": "^1.31.0",
    "@types/react-navigation": "^2.13.7",
    "@types/react-test-renderer": "^16.0.2",
    "concurrently": "^4.0.1",
    "jest-expo": "^31.0.0",
    "react-native-material-ui": "^1.30.1",
    "react-native-scripts": "1.14.0",
    "react-test-renderer": "16.3.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "preset": "jest-expo",
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|/src/.*\\.(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "ios.ts",
      "ios.tsx",
      "android.ts",
      "android.tsx"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  }
}
